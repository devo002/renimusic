<%- include("../partials/defaultPartials/header") %> 
<%- include("../partials/defaultPartials/navbar") %>
<%- include("../partials/defaultPartials/breadCrumbs") %>
          
    <section class="section section-lg-3 bg-default">
        <!-- Owl Carousel-->
        <div class="owl-carousel owl-carousel-bio" data-items="1" data-sm-items="1" data-md-items="2" data-lg-items="2" 
       
        data-autoplay="false" data-nav="true" data-dots="true" data-loop="true" data-mouse-drag="false" data-stage-padding="0" data-margin="0" data-nav-text="[&quot;prev&quot;,&quot;next&quot;]">
            <% testimonies.forEach(testimony => { %>
                <% if (!testimony) { %>
                    hello
                <% } else { %>
                    <div class="box-bio">
                        <!-- <div class="box-bio-year"><%= testimony.date.getFullYear() %> </div> -->
                        <div class="box-bio-body">
                            <h5 class="box-bio-title"><%= testimony.name %> â€“ <%= testimony.country %></h5>
                            <p class="box-bio-title"><%= testimony.message %> </p>
                        </div>
                    </div>
                <% } %> 
            <% }) %>
        </div>
    </section>
    <section class="section section-lg bg-default">
        <div class="container">
          <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-10">
              <h3>Drop a Testimony</h3>
              <p class="text-gray-600"> How has Reni-music blessed you?</p>
            </div>
          </div>
          <!--RD Mailform-->
          <form class="rd-form text-left" method="post" action="/myTestimony">
            <div class="row row-40">
              <div class="col-lg-4">
                <div class="form-wrap">
                  <label class="form-label" for="contact-name">Name</label>
                  <input class="form-input" id="contact-name" type="text" name="name" required>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-wrap">
                  <label class="form-label" for="contact-city">City</label>
                  <input class="form-input" id="contact-city" type="text" name="city" required>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="form-wrap">
                  <label class="form-label" for="contact-email">E-Mail</label>
                  <input class="form-input" id="contact-email" type="email" name="email" required>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-wrap">
                  <label class="form-label" for="contact-country">Country</label>
                  <input class="form-input" id="contact-country" type="text" name="country" required>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-wrap">
                  <label class="form-label" for="contact-message">Message</label>
                  <textarea class="form-input" id="contact-message" name="message" required></textarea>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-wrap">
                  <button class="button button-primary" type="submit">send message</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </section>
<%- include("../partials/defaultPartials/footer") %>