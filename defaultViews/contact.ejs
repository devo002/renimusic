<%- include("../partials/defaultPartials/header") %>
<%- include("../partials/defaultPartials/navbar") %>
<%- include("../partials/defaultPartials/breadCrumbs") %>
<%- include("../partials/messages") %> 

<section class="section section-md bg-default">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <h3>Contact details</h3>
        <p class="text-gray-600">On this page you can find all necessary contacts to get in touch with Reni if you would like to collaborate, book a live event or ask a question.</p>
      </div>
    </div>
  </div>
</section>

<!-- Contact Form Section -->
<section class="section section-lg bg-default">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <h3>Get in touch with me</h3>
        <p class="text-gray-600">Feel free to drop a line or ask a question using the contact form below.</p>
      </div>
    </div>

    <!-- Contact Form -->
    <form class="rd-form text-left" method="post" action="/contact" id="contact-form">
      <div class="row row-40">
        <div class="col-lg-4">
          <div class="form-wrap">
            <label class="form-label" for="contact-name">Name</label>
            <input class="form-input" id="contact-name" type="text" name="name" required>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="form-wrap">
            <label class="form-label" for="contact-phone">Phone</label>
            <input class="form-input" id="contact-phone" type="text" name="phone" required>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="form-wrap">
            <label class="form-label" for="contact-email">E-Mail</label>
            <input class="form-input" id="contact-email" type="email" name="email" required>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-wrap">
            <label class="form-label" for="contact-subject">Subject</label>
            <input class="form-input" id="contact-subject" type="text" name="subject" required>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="form-wrap">
            <label class="form-label" for="contact-message">Message</label>
            <textarea class="form-input" id="contact-message" name="message" required></textarea>
          </div>
        </div>

        <!-- Hardcoded Math Task for Spam Prevention -->
        <div class="col-lg-12">
          <div class="form-wrap">
            <p style="font-weight: bold; margin-bottom: 10px;">What is 3 + 4?</p>
            <input class="form-input" id="captcha" type="number" name="captcha" required 
              style="width: 100%; padding: 8px; color: white;">
            <small class="text-danger" id="captcha-error" style="display: none; color: red;">Incorrect answer. Please try again.</small>
          </div>
        </div>

        <!-- Submit Button (Always Enabled) -->
        <div class="col-lg-12">
          <div class="form-wrap">
            <button class="button button-primary" type="submit" id="submit-btn">Send Message</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

<%- include("../partials/defaultPartials/footer") %>

<!-- JavaScript for CAPTCHA Validation -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    console.log("CAPTCHA script is running...");

    // Hardcoded correct answer
    const correctAnswer = 7;

    // Select elements
    const form = document.getElementById("contact-form");
    const captchaInput = document.getElementById("captcha");
    const captchaError = document.getElementById("captcha-error");

    // Prevent default form submission
    form.addEventListener("submit", function (event) {
      // Prevent the form from submitting by default
      event.preventDefault();

      // Get the user's answer and trim whitespace
      const userAnswer = parseInt(captchaInput.value.trim(), 10);

      // Check if the answer is correct
      if (userAnswer === correctAnswer) {
        // Hide error message
        captchaError.style.display = "none";

        // Manually submit the form
        console.log("Correct CAPTCHA, form will submit.");
        form.submit();
      } else {
        // Show error message
        captchaError.style.display = "block";
        captchaInput.value = ""; // Clear incorrect input
        captchaInput.focus(); // Refocus on the input field
        console.log("Incorrect CAPTCHA, form not submitted.");
      }
    });
  });
</script>